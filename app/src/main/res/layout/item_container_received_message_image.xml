<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8sp"
    android:padding="4sp">

    <ImageView
        android:id="@+id/imgMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_received_message_background"
        android:contentDescription="@string/received_image"
        android:paddingStart="12sp"
        android:paddingTop="8sp"
        android:paddingEnd="12sp"
        android:paddingBottom="8sp"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.75" />

    <TextView
        android:id="@+id/textDateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/imgMessage"
        app:layout_constraintTop_toBottomOf="@id/imgMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>