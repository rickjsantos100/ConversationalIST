<resources>
    <!-- Base application theme. -->
    <style name="Theme.ConversationalIST" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ist_blue</item>
        <item name="colorOnPrimary">#2E2E2E</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ist_gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/ist_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ConversationalIST.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ConversationalIST.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ConversationalIST.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>